# Variables para entorno DEV de Authentik

# Base de datos (Postgres)
AUTHENTIK_DB_NAME=authentik_dev
AUTHENTIK_DB_USER=authentik_dev
AUTHENTIK_DB_PASSWORD=change_me

# Authentik
# Generar una clave segura con: openssl rand -base64 32
# O con: pwgen -s 50 1
AUTHENTIK_SECRET_KEY=change_me
AUTHENTIK_EXTERNAL_HOST=https://localhost:9443

# Bootstrap inicial (Usuario admin por defecto)
AUTHENTIK_BOOTSTRAP_EMAIL=admin@dev.localhost
AUTHENTIK_BOOTSTRAP_PASSWORD=change_me

# Email (opcional)
AUTHENTIK_EMAIL__FROM=authentik@localhost
AUTHENTIK_EMAIL__HOST=
AUTHENTIK_EMAIL__PORT=587
AUTHENTIK_EMAIL__USERNAME=
AUTHENTIK_EMAIL__PASSWORD=
AUTHENTIK_EMAIL__USE_TLS=true
AUTHENTIK_EMAIL__USE_SSL=false

# Application DB
INVENTORY_DB_NAME=dev_inventory_db
INVENTORY_DB_USER=dev_inventory_user
INVENTORY_DB_PASSWORD=change_me
ENV_TAG=dev
